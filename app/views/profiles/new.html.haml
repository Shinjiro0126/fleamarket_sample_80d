%h2 profile
= form_with model: @profile, local: true do |f|
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name, autofocus: true
  .field
    = f.label :family_name
    %br/
    = f.text_field :family_name, autofocus: true
  .field
    = f.label :first_name_kana
    %br/
    = f.text_field :first_name_kana, autofocus: true
  .field
    = f.label :family_name_kana
    %br/
    = f.text_field :family_name_kana, autofocus: true
  .field        
  = f.label :birth_date        
  %br/        
  = f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)
  .actions
    = f.submit "sending"