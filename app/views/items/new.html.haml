.main
  .header
  .sell
    = form_with model: @item, local:true do |f|
      .sell__image
        .form_label
          %label 出品画像
          %span.hissu 必須
        %p 最大10枚までアップロードできます
        = f.fields_for :images do |i|
          .input-area
            = i.file_field :image, type: 'file', name: "item[images_attributes][][image_url]", value:"", style: "display:none", id:"img-file"
            %label{for: "img-file"}
              %i.fas.fa-camera
              とりあえずここまで

      .sell__item
        .form_label
          %label 商品名
          %span.hissu 必須
        = f.text_field :name, placeholder: "40文字まで", class: "from__item__name" , maxlength: 40
        .form_label
          %label 商品名
          %span.hissu 必須
        = f.text_area :introduction, placeholder: "商品の説明（必須1,000文字以内）&#13;（色、素材、重さ、定価、注意点など)&#13;&#13;例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", class: "from__item__introduction" , maxlength: 1000

      .sell__details
        .form_label
          %label 商品の詳細
        .form_label
          %label カテゴリー
          %span.hissu 必須
        = f.text_field :category, placeholder: "とりあえず入れただけancestry必須", class: "from__item__category"
        .form_label
          %label ブランド
          %span.ninni 任意
        = f.text_field :brand, placeholder: "例）シャネル", class: "from__item__brand"
        .form_label
          %label 商品の状態
          %span.hissu 必須
        = f.text_field :sell_status, placeholder: "とりあえず入れただけactivehash", class: "from__item__sell_status"
      
      .sell__delivery
        .form_label
        %label 配送について
        .form_label
          %label 配送料の負担
          %span.hissu 必須
        = f.text_field :postage_payer, placeholder: "入れただけactivehash", class: "from__item__postage_payer"
        .form_label
          %label 発送元の地域
          %span.hissu 必須
        = f.text_field :prefecture, placeholder: "入れただけactivehash", class: "from__item__prefecture"
        .form_label
          %label 発送までの日数
          %span.hissu 必須
        = f.text_field :preparation_days, placeholder: "入れただけactivehash", class: "from__item__preparation_days"
      .sell__price
        .form_label
        %label 価格(¥300~9,999,999)
        .form_label
          %label 販売価格
          %span.hissu 必須
        %span ¥
        = f.number_field :price, placeholder: "0", class: "from__item__price"
        .form_label 販売手数料（10%）
      .sell__profit
        .form_label
        %label 販売利益
      .sell__btn
      = f.submit "出品する", class: "sell-btn-red"
      = link_to "戻る", :root, class: "back-btn"

  .footer
